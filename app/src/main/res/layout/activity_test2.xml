<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".UploadProduck">

    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:layout_width="match_parent"
        android:layout_height="92dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/bariol_bold"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:text="Detail Produk"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="37dp"
                    android:onClick="back10"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:navigationIcon="@drawable/arrow___left" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </com.google.android.material.appbar.CollapsingToolbarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="282dp"
                android:layout_marginHorizontal="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="239dp"
                    android:layout_height="220dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:outlineAmbientShadowColor="@color/green"
                    android:outlineSpotShadowColor="@color/green"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/apel" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>



            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                app:boxStrokeColor="@color/transparant"
                app:boxStrokeWidth="0dp"
                app:boxStrokeErrorColor="@color/green"
                android:outlineAmbientShadowColor="@color/green"
                android:background="@drawable/bg_rectangle_gradient2"
                android:layout_marginHorizontal="30dp"
                android:hint="Isi nama produk yang ingin anda jual"
                app:endIconMode="clear_text"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <EditText
                    android:id="@+id/received_value_id1"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:textColor="@color/green"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bariol_bold"
                    android:inputType="text"
                    />

            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tips: Jenis Produk + Merek Produk + Keterangan Tambahan"
                android:textSize="10dp"
                android:fontFamily="@font/bariol_bold"
                android:layout_marginHorizontal="30dp"/>
            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:boxStrokeColor="@color/transparant"
                app:boxStrokeWidth="0dp"
                app:boxStrokeErrorColor="@color/green"
                android:outlineAmbientShadowColor="@color/green"
                android:background="@drawable/bg_rectangle_gradient2"
                android:layout_marginHorizontal="30dp"
                android:hint="Harga"
                app:endIconMode="clear_text"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <EditText
                    android:id="@+id/received_value_id2"
                    android:enabled="false"
                    android:textColor="@color/green"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bariol_bold"
                    android:inputType="number"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Stock Produk"
                app:endIconMode="clear_text"
                app:boxStrokeColor="@color/transparant"
                app:boxStrokeWidth="0dp"
                app:boxStrokeErrorColor="@color/green"
                android:outlineAmbientShadowColor="@color/green"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/bg_rectangle_gradient2"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <EditText
                    android:id="@+id/received_value_id3"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:textColor="@color/green"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bariol_bold"
                    android:inputType="number"
                    />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Etalase"
                app:endIconMode="clear_text"
                app:boxStrokeColor="@color/transparant"
                app:boxStrokeWidth="0dp"
                app:boxStrokeErrorColor="@color/green"
                android:outlineAmbientShadowColor="@color/green"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/bg_rectangle_gradient2"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <EditText
                    android:id="@+id/received_value_id4"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    android:fontFamily="@font/bariol_bold"
                    android:inputType="text"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:boxStrokeColor="@color/transparant"
                app:boxStrokeWidth="0dp"
                app:boxStrokeErrorColor="@color/green"
                android:outlineAmbientShadowColor="@color/green"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/bg_rectangle_gradient2"
                android:hint="Deskripsi produk kamu"
                app:endIconMode="clear_text"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <EditText
                    android:id="@+id/received_value_id5"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:textColor="@color/green"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bariol_bold"
                    android:inputType="text"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="satuan produk"
                app:boxStrokeColor="@color/transparant"
                app:boxStrokeWidth="0dp"
                app:boxStrokeErrorColor="@color/green"
                android:outlineAmbientShadowColor="@color/green"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/bg_rectangle_gradient2"
                app:endIconMode="clear_text"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <EditText
                    android:id="@+id/received_value_id6"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    android:fontFamily="@font/bariol_bold"
                    android:inputType="text"
                    />

            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="40dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bariol_bold"
                    android:text="Detail Produk yang anda isi Apakah sudah benar ? "
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginHorizontal="30dp"
                android:onClick="edit"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_rectangle_gradient"
                android:fontFamily="@font/bariol_bold"
                android:outlineAmbientShadowColor="@color/green"
                android:outlineSpotShadowColor="@color/green"
                android:shadowColor="@color/green"
                android:textColor="@color/white"
                app:cardBackgroundColor="#39B5E0"
                app:cardCornerRadius="10dp"
                app:cardElevation="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="20dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/bariol_bold"
                        android:gravity="center"
                        android:text="Edit Kembali"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_rectangle_gradient"
                    android:fontFamily="@font/bariol_bold"
                    android:outlineAmbientShadowColor="@color/green"
                    android:outlineSpotShadowColor="@color/green"
                    android:shadowColor="@color/green"
                    android:textColor="@color/white"
                    android:onClick="lihat"
                    app:cardBackgroundColor="@color/green"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginHorizontal="20dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/bariol_bold"
                            android:gravity="center"
                            android:text="Lihat Produk"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>